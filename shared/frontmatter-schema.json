{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "status", "created"],
  "properties": {
    "type": {
      "type": "string",
      "const": "idea"
    },
    "status": {
      "type": "string",
      "enum": ["captured", "elevated", "archived", "validated", "promoted"]
    },
    "created": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "category": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "related": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "domains": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "existence-check": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "elevated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "projectPath": {
      "type": "string"
    },
    "codename": {
      "type": "string"
    }
  },
  "additionalProperties": false
}

